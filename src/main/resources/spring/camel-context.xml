<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="org.slf4j.LoggerFactory" factory-method="getLogger" id="rh1">
        <constructor-arg index="0" value="rh1"/>
    </bean>
    
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <!-- Main route -->
        <route id="generate-order-route">
           
            <from id="route-timer" uri="file://Prueba?noop=true"/>
            <log id="_log1" loggerRef="rh1" loggingLevel="ERROR" message="Log slf4j::::::::${body}"/>
       		<setProperty propertyName="titulo"> <xpath resultType= "String">//book//title</xpath></setProperty>
       		<setProperty propertyName="precio"> <xpath resultType= "String">//book//price</xpath></setProperty>
 	
       		 	<log id= "log1" loggerRef="rh1" loggingLevel="ERROR" message="El titulo del libro es::::::${property.titulo} y el precio del libro es::::::${property.precio} "/>
       		<log message="!!!!!!!!!!!!!!!!!!!!   Las propiedades del archivo son: ${headers}"> </log>
       		
       		<to uri= "file:out"> </to>
       		
       		<stop/>
        </route>
    </camelContext>
</beans>
